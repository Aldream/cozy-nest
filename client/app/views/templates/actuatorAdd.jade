.row
      .large-12.columns
            h3 New Actuator
            hr
            form#newActuator(method='post', action='/actuators')
                  .row
                        .large-4.columns
                              label Driver
                              select#actuatorDriver(type='text', name='customId', placeholder='Serial number, IP address, ...')
                                    each driver in drivers
                                          option(value=driver.id)= driver.name
                              label Device ID
                              input#actuatorCustomId(type='text', name='customId', placeholder='Serial number, IP address, ...')
                        .large-4.columns
                              label Name of the Actuator
                              input#actuatorName(type='text', name='name', placeholder='Type the name of the actuator')
                        button.button.tiny.success(type='submit') Add