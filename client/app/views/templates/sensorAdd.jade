.row
      .large-12.columns
            h3 New Sensor
            hr
            form#newSensor(method='post', action='/sensors')
                  .row
                        .large-4.columns
                              label Driver
                              select#sensorDriver(type='text', name='customId', placeholder='Serial number, IP address, ...')
                                    each driver in drivers
                                          option(value=driver.id)= driver.name
                              label Device ID
                              input#sensorCustomId(type='text', name='customId', placeholder='Serial number, IP address, ...')
                        .large-4.columns
                              label Name of the Sensor
                              input#sensorName(type='text', name='name', placeholder='Type the name of the actuator')
                        button.button.tiny.success(type='submit') Add